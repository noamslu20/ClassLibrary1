<Page
    x:Class="UXUI.Forms.ReturnLiterature"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:UXUI.Forms"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Background="#FF333333">
        <ComboBox x:Name="BorrrowdSelect" Margin="0,421,0,0" PlaceholderText="Return" Width="189" Height="149" HorizontalAlignment="Center"/>
        <TextBlock x:Name="ReturnHeader" Foreground="#FFF0ACFB" FontSize="72" FontFamily="Modern No. 20" HorizontalAlignment="Center" Margin="0,85,0,0" TextWrapping="Wrap" Text="Return Literature" VerticalAlignment="Top" FontWeight="Bold"/>
        <Button x:Name="ReturnLiteratureBtn" CornerRadius="10" Background="#FF5FFF18" Content="Return" Margin="0,690,0,0" VerticalAlignment="Top" FontWeight="Bold" FontSize="24" Foreground="Black" HorizontalAlignment="Center" Click="ReturnLiteratureBtn_Click"/>
        <Button x:Name="BackBtn" CornerRadius="10" Content="Back" Margin="61,56,0,0" VerticalAlignment="Top" Foreground="White" FontWeight="Bold" FontSize="24" Click="BackBtn_Click"/>

    </Grid>
</Page>
